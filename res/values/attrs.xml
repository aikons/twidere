<?xml version="1.0" encoding="utf-8"?>
<resources>

	<declare-styleable name="Twidere">
		<attr name="cardListBackgroundColor" format="color"/>
		<attr name="cardItemBackground" format="reference"/>
		<attr name="cardItemBackgroundColor" format="color"/>
		<attr name="cardItemMessageIncomingBackground" format="reference"/>
		<attr name="cardItemMessageOutgoingBackground" format="reference"/>
		<attr name="cardItemMessageProfileImageIncomingBackground" format="reference"/>
		<attr name="cardItemMessageProfileImageOutgoingBackground" format="reference"/>
		<attr name="listMenuOverflowButton" format="reference"/>
		<attr name="contentBackground" format="reference|color"/>
		<attr name="ignorePadding" format="boolean"/>
		<attr name="linePageIndicatorStyle" format="reference"/>
	</declare-styleable>
	<declare-styleable name="TabPagerIndicator">
		<attr name="tabItemStyle" format="reference"/>
		<attr name="tabItemContentStyle" format="reference"/>
		<attr name="tabItemTextStyle" format="reference"/>
	</declare-styleable>
	<declare-styleable name="LinePageIndicator">

		<!-- Whether or not the indicators should be centered. -->
		<attr name="centered" format="boolean"/>
		<!-- Color of the unselected lines that represent the pages. -->
		<attr name="unselectedColor" format="color"/>
		<!-- Color of the selected line that represents the current page. -->
		<attr name="selectedColor" format="color"/>
		<!-- Width of each indicator line. -->
		<attr name="lineWidth" format="dimension"/>
		<!-- Width of each indicator line's stroke. -->
		<attr name="strokeWidth" format="dimension"/>
		<!-- Width of the gap between each indicator line. -->
		<attr name="gapWidth" format="dimension"/>
		<!-- View background -->
		<attr name="android:background"/>
	</declare-styleable>

	<!-- Default fade types. -->
	<attr name="paneFadeType">

		<!-- Fade is disabled. -->
		<enum name="none" value="0"/>
		<!-- Fade applies to actions container. -->
		<enum name="left" value="1"/>
		<!-- Fade applies to content container. -->
		<enum name="right" value="2"/>
		<!-- Fade applies to every container. -->
		<enum name="both" value="3"/>
	</attr>

	<declare-styleable name="SlidingPaneView">

		<!-- Spacing value. -->
		<attr name="paneSpacingRight" format="dimension"/>
		<!-- Spacing value for actions container. -->
		<attr name="paneSpacingLeft" format="dimension"/>
		<!-- Actions layout ID to link at view creation time. -->
		<attr name="paneLayoutLeft" format="reference"/>
		<!-- Content layout ID to link at view creation time. -->
		<attr name="paneLayoutRight" format="reference"/>
		<!-- Drawable to be used to draw shadow dropped by content view to actions one. -->
		<attr name="paneShadowDrawable" format="reference"/>
		<!-- Shadow width. -->
		<attr name="paneShadowWidth" format="dimension"/>
		<attr name="paneShadowSlidable" format="boolean"/>
		<!-- Fade type. -->
		<attr name="paneFadeType"/>
		<!-- Max fade value. -->
		<attr name="paneFadeMax" format="integer"/>
		<!-- Indicates how long flinging will take time in milliseconds. -->
		<attr name="paneFlingDuration" format="integer"/>
	</declare-styleable>
	<declare-styleable name="SwipeBackLayout">
		<attr name="edgeSize" format="dimension"/>
		<attr name="edgeFlag" format="enum"/>
		<attr name="shadowLeft" format="reference"/>
		<attr name="shadowRight" format="reference"/>
		<attr name="shadowBottom" format="reference"/>
	</declare-styleable>

	<attr name="swipeBackLayoutStyle" format="reference"/>

	<declare-styleable name="SeekBarDialogPreference">
		<attr name="max" format="integer"/>
		<attr name="min" format="integer"/>
		<attr name="progressTextSuffix" format="string"/>
	</declare-styleable>

</resources>