<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Widget.Twidere.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@drawable/ab_twidere_holo</item>
	</style>

	<style name="Widget.Twidere.ActionBar.Dark" parent="android:Widget.Holo.ActionBar">
		<item name="android:background">@drawable/ab_twidere_dark_holo</item>
	</style>

	<style name="Widget.Twidere.ActionBar.Light" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@drawable/ab_twidere_light_holo</item>
	</style>

	<style name="Widget.Twidere.Viewer.ActionBar" parent="android:Widget.Holo.ActionBar">
		<item name="android:background">#80000000</item>
	</style>

	<style name="Widget.Twidere.ImageButton.Borderless" parent="android:Widget.Holo.ImageButton">
		<item name="android:background">?android:attr/selectableItemBackground</item>
	</style>

	<style name="Widget.Twidere.Light.ImageButton.Borderless" parent="android:Widget.Holo.Light.ImageButton">
		<item name="android:background">?android:attr/selectableItemBackground</item>
	</style>

	<style name="Widget.Twidere.SelectableView" parent="android:Widget.Holo">
		<item name="android:background">?android:attr/selectableItemBackground</item>
	</style>

	<style name="Widget.Twidere.Light.SelectableView" parent="android:Widget.Holo.Light">
		<item name="android:background">?android:attr/selectableItemBackground</item>
	</style>

	<style name="Animation.ImageViewer" parent="android:Animation">
		<item name="android:windowEnterAnimation">@android:anim/fade_in</item>
		<item name="android:windowExitAnimation">@android:anim/fade_out</item>
	</style>

	<style name="Animation.SwipeBack" parent="android:Animation">
		<item name="android:windowEnterAnimation">@anim/slide_in_right</item>
		<item name="android:windowExitAnimation">@anim/slide_out_right</item>
	</style>

	<style name="Widget.TabPageIndicator" parent="@android:style/Widget">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:background">@drawable/vpi__tab_indicator</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">6dp</item>
		<item name="android:paddingBottom">6dp</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="Widget.TabPageIndicator.TextView" parent="@android:style/Widget.TextView">
		<item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
		<item name="android:textColor">#fff3f3f3</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">4dp</item>
		<item name="android:maxLines">1</item>
	</style>

	<style name="Widget.TabPageIndicator.TextView.Light"></style>

	<style name="TextAppearance.TabPageIndicator" parent="@android:style/TextAppearance.Small"/>

	<style name="SwipeBackLayout">
		<item name="edgeSize">16dip</item>
		<item name="shadowLeft">@drawable/swipeback_shadow_left</item>
		<item name="shadowRight">@drawable/swipeback_shadow_right</item>
		<item name="shadowBottom">@drawable/swipeback_shadow_bottom</item>
	</style>

</resources>