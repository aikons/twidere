<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Widget.ActionBar" parent="android:Widget.Holo.ActionBar">
		<item name="android:background">?actionBarBackground</item>
	</style>

	<style name="Widget.ActionBar.Light" parent="android:Widget.Holo.Light.ActionBar">
		<item name="android:background">?actionBarBackground</item>
	</style>

	<style name="Widget.ActionBar.Light.Solid.Inverse" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:background">?actionBarBackground</item>
	</style>

	<style name="Widget.ActionBarItem" parent="android:Widget.Holo.ActionButton">

		<!-- layout_width/height must be set in code -->
		<item name="android:background">?android:attr/selectableItemBackground</item>
	</style>

	<style name="Widget.ActionBarHomeItem" parent="android:Widget.Holo.ActionButton">
		<item name="android:minWidth">36dp</item>
		<item name="android:gravity">center_vertical|right</item>
		<item name="android:background">?android:attr/selectableItemBackground</item>
		<item name="android:paddingLeft">2dp</item>
		<item name="android:paddingTop">0dp</item>
		<item name="android:paddingRight">4dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="Widget.ActionBarItem.Light.DarkActionBar" parent="Widget.ActionBarItem"/>

	<style name="Widget.ActionBarHomeItem.Light.DarkActionBar" parent="Widget.ActionBarHomeItem"/>

</resources>
