<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="@dimen/element_spacing_large">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/element_spacing_default"
			android:singleLine="true"
			android:text="@string/wizard_page_1_title"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="?android:colorActivatedHighlight"
			android:textSize="@dimen/text_size_wizard_title"
			android:textStyle="italic"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="#40808080"
			android:padding="@dimen/element_spacing_default"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:lineSpacingMultiplier="1.25"
			android:padding="@dimen/element_spacing_default"
			android:text="@string/wizard_page_1_text"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="@dimen/text_size_wizard_text"
			android:textStyle="normal"/>

		<RadioGroup
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/element_spacing_large">

			<RadioButton
				android:id="@+id/goto_settings"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:checked="true"
				android:padding="@dimen/element_spacing_default"
				android:text="@string/wizard_page_1_yes"
				android:textSize="@dimen/text_size_wizard_text"/>

			<RadioButton
				android:id="@+id/use_default_settings"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/element_spacing_default"
				android:text="@string/wizard_page_1_use_default_settings"
				android:textSize="@dimen/text_size_wizard_text"/>

			<RadioButton
				android:id="@+id/import_settings"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/element_spacing_default"
				android:text="@string/wizard_page_1_import_settings"
				android:textSize="@dimen/text_size_wizard_text"
				android:visibility="gone"/>
		</RadioGroup>
	</LinearLayout>

</ScrollView>