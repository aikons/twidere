<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.Blank" parent="android:Theme.Holo.NoActionBar"/>

	<style name="Theme.Twidere.Viewer" parent="android:Theme.Holo.NoActionBar">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowBackground">@drawable/viewer_background</item>
		<!-- <item name="android:windowAnimationStyle">@style/Animation.ImageViewer</item> -->
		<item name="android:itemBackground">@drawable/item_background_holo_dark</item>
		<item name="borderlessButtonStyle">@style/Widget.Twidere.Button.Borderless</item>
		<item name="borderlessImageButtonStyle">@style/Widget.Twidere.ImageButton.Borderless</item>
		<item name="selectableViewStyle">@style/Widget.Twidere.SelectableView</item>
		<item name="preferenceTitleStyle">@style/TextAppearance.Holo.Medium</item>
		<item name="contentBackground">#20000000</item>
	</style>

	<style name="Theme.Twidere" parent="Theme.Holo">
		<item name="tabStyle">@style/Widget.TabPageIndicator</item>
		<item name="tabTextStyle">@style/Widget.TabPageIndicator.TextView</item>
		<item name="tabBackground">@null</item>
		<item name="borderlessButtonStyle">@style/Widget.Twidere.Button.Borderless</item>
		<item name="borderlessImageButtonStyle">@style/Widget.Twidere.ImageButton.Borderless</item>
		<item name="selectableViewStyle">@style/Widget.Twidere.SelectableView</item>
		<item name="editTextStyle">@style/Widget.Holo.EditText</item>
		<item name="preferenceTitleStyle">@style/TextAppearance.Holo.Medium</item>
		<item name="contentBackground">#20000000</item>

		<!-- for programmatic instantiation -->
		<item name="actionBarBackground">@drawable/actionbar_bg_dark_holo</item>
		<item name="actionBarTitleStyle">@style/Widget.ActionBarTitle</item>
		<item name="actionBarItemStyle">@style/Widget.ActionBarItem</item>
		<item name="actionBarItemHomeStyle">@style/Widget.ActionBarHomeItem</item>
		<item name="actionBarHomeAsUpIndicator">@drawable/actionbar_back_dark</item>
		<item name="actionBarIndeterminateProgressStyle">?android:attr/progressBarStyleSmall</item>
		<item name="android:windowBackground">@drawable/background_holo_dark</item>
		<!--<item name="android:itemBackground">@drawable/item_background_holo_dark</item>-->
	</style>

