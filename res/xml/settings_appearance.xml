<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:robobunny="http://robobunny.com"
	android:key="category_appearance"
	android:title="@string/look_and_feel">

	<CheckBoxPreference
		android:defaultValue="false"
		android:key="click_to_open_menu"
		android:summary="@string/click_to_open_menu_summary"
		android:title="@string/click_to_open_menu"/>
	<CheckBoxPreference
		android:defaultValue="false"
		android:key="separate_retweet_action"
		android:summary="@string/separate_retweet_action_summary"
		android:title="@string/separate_retweet_action"/>
	<CheckBoxPreference
		android:defaultValue="false"
		android:key="bottom_send_button"
		android:title="@string/bottom_send_button"/>
	<CheckBoxPreference
		android:defaultValue="false"
		android:key="bottom_compose_button"
		android:summary="@string/bottom_compose_button_summary"
		android:title="@string/bottom_compose_button"/>
	<CheckBoxPreference
		android:defaultValue="false"
		android:dependency="bottom_compose_button"
		android:key="leftside_compose_button"
		android:summary="@string/leftside_compose_button_summary"
		android:title="@string/leftside_compose_button"/>
	<CheckBoxPreference
		android:defaultValue="false"
		android:key="fast_scroll_thumb"
		android:title="@string/fast_scroll_thumb"/>

	<PreferenceCategory
		android:key="cat_tweet"
		android:title="@string/tweet">
		<org.mariotaku.twidere.preference.StatusPreviewPreference
			android:key="status_preview"
			android:title="@string/preview"/>

		<com.robobunny.SeekBarPreference
			android:defaultValue="@integer/default_text_size"
			android:key="text_size_int"
			android:max="24"
			android:summary="@string/text_size_summary"
			android:title="@string/text_size"
			robobunny:min="12"
			robobunny:unitsLeft=""
			robobunny:unitsRight="sp"/>

		<ListPreference
			android:defaultValue="both"
			android:entries="@array/entries_name_display_option"
			android:entryValues="@array/values_name_display_option"
			android:key="name_display_option"
			android:title="@string/name_display_option"/>

		<CheckBoxPreference
			android:defaultValue="true"
			android:key="display_profile_image"
			android:summary="@string/image_load_summary"
			android:title="@string/display_profile_image"/>

		<ListPreference
			android:defaultValue="none"
			android:entries="@array/entries_image_preview_display_option"
			android:entryValues="@array/values_image_preview_display_option"
			android:key="image_preview_display_option"
			android:title="@string/image_preview_display_option"/>

		<!--
		<CheckBoxPreference
			android:defaultValue="false"
			android:disableDependentsState="true"
			android:key="fast_timeline_processing"
			android:summary="@string/fast_timeline_processing_summary"
			android:title="@string/fast_timeline_processing"/>
		-->
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="link_highlighting"
			android:title="@string/link_highlighting"/>
		<CheckBoxPreference
			android:defaultValue="false"
			android:dependency="link_highlighting"
			android:key="link_underline_only"
			android:title="@string/link_underline_only"/>
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="indicate_my_status"
			android:title="@string/indicate_my_status"/>
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="show_absolute_time"
			android:summary="@string/show_absolute_time_summary"
			android:title="@string/show_absolute_time"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:key="cat_dual_pane_layout"
		android:title="@string/dual_pane_layout">
		<CheckBoxPreference
			android:defaultValue="@bool/is_large_screen"
			android:key="dual_pane_in_portrait"
			android:title="@string/portrait"/>
		<CheckBoxPreference
			android:defaultValue="@bool/is_large_screen"
			android:key="dual_pane_in_landscape"
			android:title="@string/landscape"/>
	</PreferenceCategory>

</PreferenceScreen>